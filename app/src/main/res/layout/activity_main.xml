    <ImageView
        android:id="@+id/flag3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/flag2"
        android:layout_alignEnd="@+id/imageView8"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="-13dp"
