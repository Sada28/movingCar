    <ImageView
        android:id="@+id/flag6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imageView8"
        android:layout_alignTop="@+id/imageView8"
        android:layout_marginStart="8dp"
        android:layout_marginTop="181dp"
        app:srcCompat="@drawable/flag_red" />

    <ImageView
        android:id="@+id/flag7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imageView8"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_marginStart="125dp"
        android:layout_marginBottom="65dp"
        app:srcCompat="@drawable/flag_red" />

    <ImageView
        android:id="@+id/flag8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/imageView8"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="66dp"
        app:srcCompat="@drawable/flag_red" />

    <ImageView
        android:id="@+id/flag9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/imageView8"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="62dp"
        app:srcCompat="@drawable/flag_red" />

    <ImageView
        android:id="@+id/myCar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/flag1"
        android:layout_alignStart="@+id/imageView8"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-70dp"
        app:srcCompat="@drawable/mycar" />

    <ImageView
        android:id="@+id/myCar2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/imageView8"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="170dp"
        android:rotationY="180"
        app:srcCompat="@drawable/mycar" />

    <ImageView
        android:id="@+id/myCar3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imageView8"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="48dp"
        app:srcCompat="@drawable/mycar" />

</RelativeLayout>